<title>TP1 - Đăng nhập</title>


<body class="bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12">

                <!-- Form sign in -->
                <form action="#" method="POST" class="form-container" id="form-1">
                    <h3 class="heading text-shadow">Đăng nhập</h3>
                    {{!-- <p class="desc">Example</p> --}}

                    <div class="spacer"></div>

                    <div class="form-group">
                        <label for="fullname" class="text-shadow form-label">Tên tài khoản</label>
                        <input id="fullname" name="username" rules="required" type="text" placeholder="Nhập tên tài khoản"
                            class="form-control">
                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="text-shadow form-label">Mật khẩu</label>
                        <input id="password" name="password" type="password" rules="required|min:6" placeholder="Nhập mật khẩu"
                            class="form-control">
                        <span class="form-message"></span>
                    </div>

                    <button type="submit" class="form-submit btn mt-4 btn-login btn-outline-info">Đăng nhập</button>
                </form>
            </div>

            <div class="col-md-4 col-sm-4 col-xs-12"></div>

        </div>
    </div>

    {{!-- <script type="module" src="./main.js"></script> --}}
</body>


